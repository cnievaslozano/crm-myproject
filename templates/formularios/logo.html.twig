{% extends 'base.html.twig' %}

{% block title %}Enviar Briefing Logo{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
<section class="vh-100 d-flex justify-content-center">
    <div class="container" style="max-width: 750px;">
        <div class="row">
            <div class="col-sm-12 text-black">
                <div class="d-flex flex-column align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    
                    {{ form_start(form, {'attr': {'class': 'custom-form'}}) }}

                    <h3 class="fw-bold mb-3 pb-3" style="letter-spacing: 1px;"> <span class="custom-label" style="color: #99c21e">¡Hola {{ username }}!</span> <br> Estás enviando un Briefing de Logo </h3>
                    {# Mensaje de error o exito #}

                    {% for flashMessage in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}

                    {% for flashMessage in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                    {# Personalizar el renderizado de cada campo #}

                    <div class="form-outline form-floating mb-4">
                        {{ form_widget(form.nombre_logo) }}
                        <label class="form-label" for="{{ form.nombre_logo.vars.id }}">Nombre del logo</label>

                    </div>
                    <div class="form-outline form-floating mb-4">
                        {{ form_widget(form.audiencia, {'attr': {'class': 'form-control', 'style': 'height: 150px;' }}) }}
                        <label class="form-label" for="{{ form.audiencia.vars.id }}">¿Qué audiencia tiene tu empresa?</label>
                    </div>


                    <div class="form-outline form-floating mb-4">
                        {{ form_widget(form.ejemplo , {'attr': {'class': 'form-control', 'style': 'height: 250px;' }}) }}
                        <label class="form-label" for="{{ form.ejemplo.vars.id }}">Ideas, referencias, ejemplos...</label>
                    </div>

                    <div class="form-outline form-floating mb-4">
                        {{ form_widget(form.elementos , {'attr': {'class': 'form-control', 'style': 'height: 150px;' }}) }}
                        <label class="form-label" for="{{ form.elementos.vars.id }}">¿Qué elementos te gustaría incluir?</label>
                    </div>

                    <div class="col-12 gap-2">
							<div class="pt-1 mb-4">
								{{ form_row(form.submit) }}
							</div>
							<a href="{{ path('dashboard_empresa') }}" class="btn btn-primary">Volver</a>
						</div>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>    
</section>
{% endblock %}
