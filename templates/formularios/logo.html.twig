{% extends 'formularios/plantilla-form.html.twig' %}

{% block title %}
Enviar Briefing Logo
{% endblock %}

{% block formulario %}

{% import 'components/flash.html.twig' as mensajeFlash %}
{% import 'components/boton_volver.html.twig' as botonVolver %}

{# Título #}
<h3>
	<span class="custom-label text-granota">¡Hola
		{{ username }}!</span>
	<br>
	Estás enviando un Briefing de Logo
</h3>

{# Mensaje Flash #}
{{mensajeFlash.flashComponent()}}

{# Campo nombre del logo #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.nombre_logo) }}
	<label class="form-label" for="{{ form.nombre_logo.vars.id }}">Nombre del logo</label>

</div>

{# Campo Audiencia #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.audiencia, {'attr': {'class': 'form-control', 'style': 'height: 150px;' }})
	}}
	<label class="form-label" for="{{ form.audiencia.vars.id }}">¿Qué audiencia tiene tu
		empresa?</label>
</div>

{# Campo Ejemplos #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.ejemplo , {'attr': {'class': 'form-control', 'style': 'height: 250px;' }})
	}}
	<label class="form-label" for="{{ form.ejemplo.vars.id }}">Ideas, referencias,
		ejemplos...</label>
</div>

{# Campo Elementos #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.elementos , {'attr': {'class': 'form-control', 'style': 'height: 150px;' }})
	}}
	<label class="form-label" for="{{ form.elementos.vars.id }}">¿Qué elementos te gustaría
		incluir?</label>
</div>

{# Enviar Formulario #}
<div class="col-12 gap-2">
	<div class="pt-1 mb-4">
		{{ form_row(form.submit) }}
	</div>

	{{botonVolver.propiedades('btn btn-primary', path('dashboard_empresa')) }}

</div>

{% endblock %}