{% extends 'plantillas/plantilla-form.html.twig' %}

{% block title %}
Registro Empresa
{% endblock %}

{% block formulario %}

{% import 'components/flash.html.twig' as mensajeFlash %}
{% import 'components/boton_volver.html.twig' as botonVolver %}

{# Título #}
<h3>
	<span class="custom-label text-granota">¡Hola administrador!</span>
	<br>
	Estás creando una empresa
</h3>

{# Mensaje Flash #}
{{mensajeFlash.flashComponent()}}

{# Campo Nombre #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.nombre) }}
	<label class="form-label" for="{{ form.nombre.vars.id }}">Nombre</label>
</div>

{# Campo Imagen del logo #}
<div class="mb-2 mt-3">
	<strong>Imagen del logotipo</strong>
</div>
<div class="form-outline mb-4">
	{{ form_widget(form.imagen_logotipo_ruta) }}
</div>

{# Campo Descripción de la empresa #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.descripcion_empresa) }}
	<label class="form-label" for="{{ form.descripcion_empresa.vars.id }}">Descripción de la
		empresa</label>
</div>

{# Campo email #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.email) }}
	<label class="form-label" for="{{ form.email.vars.id }}">Email</label>
</div>

{# Campo Teléfono #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.telefono) }}
	<label class="form-label" for="{{ form.telefono.vars.id }}">Teléfono</label>
</div>

{# Enviar Formulario #}
<div class="col-12 gap-2">
	<div class="pt-1 mb-4">
		{{ form_row(form.submit) }}
	</div>
	
	{{botonVolver.propiedades('btn btn-primary', path('dashboard_clientes')) }}

</div>

{% endblock %}