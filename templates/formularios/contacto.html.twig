{% extends 'base.html.twig' %}

{% block title %}Registro Contacto{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .custom-btn {
            background-color: #99c21e;
            color: #ffffff;
        }


    </style>
{% endblock %}
{% block body %}
<section class="vh-100 d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-black">
                <div class="d-flex flex-column align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    
                    {{ form_start(form, {'attr': {'class': 'custom-form'}}) }}

                    <h3 class="fw-bold mb-3 pb-3" style="letter-spacing: 1px;"> <span class="custom-label" style="color: #99c21e">¡Hola administrador!</span> <br> Estás creando un contacto para ...</h3>
                    {# Mensaje de error o exito #}

                    {% for flashMessage in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}

                    {% for flashMessage in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ flashMessage }}
                        </div>
                    {% endfor %}
                    {# Personalizar el renderizado de cada campo #}

                    <div class="form-outline form-floating mb-4">
                        {{ form_widget(form.nombre_contacto) }}
                        <label class="form-label" for="{{ form.nombre_contacto.vars.id }}">Nombre</label>

                    </div>
                    <div class="form-outline form-floating mb-4">
                        {{ form_widget(form.descripcion_contacto) }}
                        <label class="form-label" for="{{ form.descripcion_contacto.vars.id }}">Descripción del contacto</label>
                    </div>

                    <div class="form-outline form-floating mb-4">
                        {{ form_widget(form.email) }}
                        <label class="form-label" for="{{ form.email.vars.id }}">Email</label>
                    </div>

                    <div class="form-outline form-floating mb-4">
                        {{ form_widget(form.telefono) }}
                        <label class="form-label" for="{{ form.telefono.vars.id }}">Teléfono</label>
                    </div>

                    <div class="form-outline form-floating mb-4">
                        {{ form_widget(form.usuario) }}
                        <label class="form-label" for="{{ form.usuario.vars.id }}">Contacto de:</label> {# esto es temporal #}
                    </div>

                    <div class="pt-1 mb-4">
                        {{ form_row(form.submit) }}
                    </div>

                    <p class="small mb-5 pb-lg-2 text-muted">...*</p>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>    
</section>
{% endblock %}
