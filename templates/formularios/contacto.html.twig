{% extends 'formularios/plantilla-form.html.twig' %}

{% block title %}
Registro Contacto
{% endblock %}

{% block formulario %}

{% import 'components/flash.html.twig' as mensajeFlash %}
{% import 'components/boton_volver.html.twig' as botonVolver %}

{# Título #}
<h3>
	<span class="custom-label text-granota" >¡Hola administrador!</span>
	<br>
	Estás creando un contacto para <span class="text-primary">{{ usuario.username }}</span>
</h3>
<p>({{ usuario.nombreUsuario}} {{usuario.apellidosUsuario}}) </p>

{# Mensaje Flash #}
{{mensajeFlash.flashComponent()}}

{# Campo Nombre de contacto #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.nombre_contacto) }}
	<label class="form-label" for="{{ form.nombre_contacto.vars.id }}">Nombre</label>

</div>

{# Campo Descripción del contacto #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.descripcion_contacto) }}
	<label class="form-label" for="{{ form.descripcion_contacto.vars.id }}">Descripción del
		contacto</label>
</div>

{# Campo Email #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.email) }}
	<label class="form-label" for="{{ form.email.vars.id }}">Email</label>
</div>

{# Campo telefongo #}
<div class="form-outline form-floating mb-4">
	{{ form_widget(form.telefono) }}
	<label class="form-label" for="{{ form.telefono.vars.id }}">Teléfono</label>
</div>

{# Enviar Formulario #}
<div class="col-12 gap-2">
	<div class="pt-1 mb-4">
		{{ form_row(form.submit) }}
	</div>

	{{botonVolver.propiedades('btn btn-primary', path('usuario_show', {'id': usuario.id}) ) }}

</div>

{% endblock %}