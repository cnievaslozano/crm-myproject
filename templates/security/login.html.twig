{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# cuando me instale node hacerlo de esta manera 
    <link rel="stylesheet" href="{{ asset('styles/form.css') }}">
    #}
    <style>
        .custom-btn {
            background-color: #99c21e;
            color: #ffffff;
        }
    </style>
{% endblock %}

{% block body %}
<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <!-- Ilustración a la izquierda -->
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
                    alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
            <div class="col-sm-6 text-black d-flex align-items-center justify-content-center">
                <form method="post" style="width: 23rem;">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Has iniciado sesión como {{ app.user.userIdentifier }}, <a
                                href="{{ path('app_logout') }}">Cerrar sesión</a>
                        </div>
                    {% endif %}

                    <h3 class="fw-bold mb-3 pb-3" style="letter-spacing: 1px;"> <span
                            style="color: #99c21e">¡Bienvenido!</span> <br> Aquí comienza tu proyecto</h3>
                    <div class="form-outline form-floating mb-4">
                        <input type="text" value="{{ last_username }}" name="username" id="inputUsername"
                            class="form-control form-control-lg" autocomplete="username" required autofocus>
                        <label for="inputUsername" class="form-label">Usuario</label>
                    </div>

                    <div class="form-outline form-floating mb-4">
                        <input type="password" name="password" id="inputPassword"
                            class="form-control form-control-lg" autocomplete="current-password" required>
                        <label for="inputPassword" class="form-label">Contraseña</label>
                    </div>
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}
                    <div class="pt-1 mb-4">
                        <button class="btn custom-btn btn-lg btn-block" type="submit">
                            Iniciar sesión
                        </button>
                    </div>

                    <p class="small mb-5 pb-lg-2"><a class="text-muted" href="#!">¿Has olvidado la contraseña?</a></p>

                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
