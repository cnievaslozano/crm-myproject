{% extends 'dashboard/plantilla_pdf.html.twig' %}

{% block title %}Briefing Web de
	{{empresa.nombre}}
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1>Briefing Logo de:
					<span class="text-primary">{{ empresa.nombre }}
					</span>
				</h1>
			</div>
		</div>

		<div class="row">
			<div class="col-12">
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ briefing_logo.id }}</td>
						</tr>
						<tr>
							<th>Activo</th>
							<td>{{  briefing_logo.isActivo ? 'si' : 'no'}}</td>
						</tr>
						<tr>
							<th>Lo ha creado el usuario</th>
							<td>{{ usuario.username }}</td>
						</tr>
						<tr>
							<th>Nombre del logo</th>
							<td>{{ briefing_logo.nombreLogo }}</td>
						</tr>
						<tr>
							<th>Audiencia</th>
							<td>{{ briefing_logo.audiencia }}</td>
						</tr>
						<tr>
							<th>Ejemplo</th>
							<td>{{ briefing_logo.ejemplo }}</td>
						</tr>
						<tr>
							<th>Elementos</th>
							<td>{{ briefing_logo.elementos }}</td>
						</tr>
						<tr>
							<th>Fecha en la que se ha enviado</th>
							<td>{{ briefing_logo.fechaCreacionBriefingLogo ? briefing_logo.fechaCreacionBriefingLogo|date('Y-m-d H:i:s') }}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	{% endblock %}
