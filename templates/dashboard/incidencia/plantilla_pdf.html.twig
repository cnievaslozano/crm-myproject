{% extends 'dashboard/plantilla_pdf.html.twig' %}
{% block title %}Briefing Web de
	{{empresa.nombre}}
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1>
					Incidencia de:
					<span class="text-primary">{{ empresa.nombre }}</span>
				</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ incidencia.id }}</td>
						</tr>
						<tr>
							<th>Lo ha creado el usuario</th>
							<td>{{ usuario.username }}</td>
						</tr>
						<tr>
							<th>Pertenece al briefing
								{{ incidencia.tipo }}</th>
							<td>{{ briefing.id }}</td>
						</tr>
						<tr>
							<th>Título</th>
							<td>{{ incidencia.titulo }}</td>
						</tr>
						<tr>
							<th>Descripción</th>
							<td>{{ incidencia.descripcion }}</td>
						</tr>
						<tr>
							<th>Url</th>
							<td>{{ incidencia.url}}</td>
						</tr>
						<tr>
							<th>Imágenes</th>
							<td>
								{% if incidencia.rutaImagenes %}
									<img src="/uploads/incidencias/{{ incidencia.rutaImagenes}}" alt="contenido" style="width: 400px;  margin-right: 20px;">
								{% else %}
									No hay imagen disponible.
								{% endif %}
							</td>
						</tr>
						<tr>
							<th>Fecha de la incidencia</th>
							<td>{{ incidencia.fechaCreacionIncidencia|date('Y-m-d H:i:s') }}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
{% endblock %}