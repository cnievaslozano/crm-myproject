{% extends 'dashboard/plantilla_pdf.html.twig' %}

{% block title %}
    Contenido del Briefing Web de {{empresa.nombre}}
{% endblock %}
{% block body %}
    <div class="container">
		<div class="row">
			<div class="col-12">
				<h1>
					Contenido de:
					<span class="text-primary">{{ empresa.nombre }}</span>
				</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ contenido.id }}</td>
						</tr>
						<tr>
							<th>Activo</th>
							<td>
								{{ contenido.isActivo ? 'si' : 'no' }}
							</td>
						</tr>
						<tr>
							<th>Briefing web id</th>
							<td>
								{{ contenido.briefingWeb.id }}</td>
						</tr>
						<tr>
							<th>Lo ha creado el usuario</th>
							<td>{{ usuario.username }}</td>
						</tr>
						<tr>
							<th>Título</th>
							<td>{{ contenido.titulo }}</td>
						</tr>
						<tr>
							<th>Punto menú</th>
							<td>{{ contenido.puntoMenu }}</td>
						</tr>
						<tr>
							<th>Contenido</th>
							<td>{{ contenido.contenido }}</td>
						</tr>
						<tr>
							<th>Imágenes</th>
							<td>
								{% if contenido.rutaImagenesContenidos %}
									<img src="/uploads/contenidos/{{ contenido.rutaImagenesContenidos}}" alt="" style="width: 200px;  margin-right: 20px;">
								{% else %}
									No hay imagen disponible.
								{% endif %}
							</td>
						</tr>
					</tbody>
				</td>
			</tr>
		</tbody>
	</table>
</div>
{% endblock %}