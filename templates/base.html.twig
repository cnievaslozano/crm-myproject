    <!-- CDN JQUERY -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>
{% block stylesheets %}
<style>
    .footer-links {
        position: absolute;
        bottom: 0;
        right: 0;
        padding: 10px;
        margin-right: 10px;
    }

    .footer-links a {
        text-decoration: none;
        /* Quitar subrayado de todos los enlaces dentro de .footer-links */
    }

    .custom-form {
        width: 700px;
    }

    .btn-granota {
        background-color: #99c21e;
        color: #ffffff;
    }

    .btn-granota:hover {
        background-color: #b3d844;
        color: #ffffff;
    }

    footer {
        min-height: 1em;
        position: absolute;
        bottom: 0;
        width: 100%;

    }

    footer a {
        text-decoration: none;
        color: #000;
    }

    footer a:hover {
        color: #b3d844;
    }
</style>
{% endblock %}


<body>
    {% block body %}

    {% endblock %}

    {# así en el login no sale#}
    {% if app.request.pathinfo != '/login' %}
    <footer>
        <div class="container">
            <div class="text-center p-3">
                © 2024
                <a href="https://granota.net">Granota.net</a>
                |
                <a href="#">Aviso Legal</a>
                |
                <a href="#">Política de Cookies</a>
            </div>
        </div>
    </footer>
    {% endif %}




</body>

</html>