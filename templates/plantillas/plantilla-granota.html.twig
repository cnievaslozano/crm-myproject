<script>
	// Obtener la URL actual
	var currentUrl = window.location.pathname;

	// Definir una función para cambiar el estilo del enlace según la URL actual
	function setLinkStyle(linkSelector, targetUrl) {
		var link = document.querySelector(linkSelector);
		if (link && currentUrl === targetUrl) {
			var svgElement = link.querySelector('svg');
			if (svgElement) {
				svgElement.style.fill = '#99c21e'; // Cambia el color del SVG a verde
			}
		}
	}

	// Llamar a la función para cada enlace que deseas verificar
	setLinkStyle('.dashboard-link', '/dashboard');
	setLinkStyle('.clientes-link', '{{ path('dashboard_clientes') }}');
	setLinkStyle('.briefings-link', '{{ path('dashboard_briefings') }}');
	setLinkStyle('.contenidos-link', '{{ path('dashboard_contenidos') }}');
	setLinkStyle('.incidencias-link', '{{ path('dashboard_incidencias') }}');
</script>

