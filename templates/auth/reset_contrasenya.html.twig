{% extends 'plantillas/plantilla-auth.html.twig' %}

{% block title %}
Resetea la contraseña
{% endblock %}

{% block contenido %}

{% import 'components/flash.html.twig' as mensajeFlash %}
{% import 'components/boton_volver.html.twig' as botonVolver %}

<form method="post" class="form__auth">

    <h3><span class="text-granota">Restablece</span> tu contraseña <span class="text-primary">olvidada</span></h3>

    <div class="form-outline form-floating mb-4">
        <input class="form-control form-control-lg" type="password" id="password" name="password" required>
        <label class="form-label" for="password">Nueva contraseña</label>
    </div>

    <div class="form-outline form-floating mb-4">
        <input class="form-control form-control-lg" type="password" id="confirm_password" name="confirm_password" required>
        <label class="form-label" for="confirm_password">Confirmar contraseña</label>
    </div>

    <div class="pt-1 mb-4">
        <button class="btn btn-granota btn-lg btn-block" type="submit">Restablecer contraseña</button>
    </div>
</form>


{% endblock %}